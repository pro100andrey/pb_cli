    "version": "0.2.0",
    "configurations": [
        {
            "name": "Setup",
            "request": "launch",
            "program": "bin/pb_cli.dart",
            "type": "dart",
            "console": "terminal",
            "args": [
                "setup",
                "--verbose",
                "--dir=./pb_data"
            ]
        },
        {
            "name": "Pull",
            "request": "launch",
            "program": "bin/pb_cli.dart",
            "type": "dart",
            "console": "terminal",
            "args": [
                "pull",
                "--dir=./pb_data",
                "--verbose"
            ]
        },
        {
            "name": "Push",
            "request": "launch",
            "program": "bin/pb_cli.dart",
            "type": "dart",
            "console": "terminal",
            "args": [
                "push",
                "--env=.env",
                "--truncate",
                "--verbose"
            ]
        }
    ]
}